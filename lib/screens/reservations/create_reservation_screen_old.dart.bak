  void _showConfirmDialog(MealModel meal) {
    final authProvider = Provider.of<AuthProvider>(context, listen: false);
    final mealProvider = Provider.of<MealProvider>(context, listen: false);
    final user = authProvider.currentUser!;

    // Yemekhane seçimi kontrolü
    if (mealProvider.selectedCafeteriaId == null) {
      Helpers.showSnackBar(
        context,
        'Lütfen önce bir yemekhane seçin',
        isError: true,
      );
      return;
    }

    if (user.balance < meal.reservationPrice) {
      Helpers.showSnackBar(
        context,
        AppStrings.tr['insufficientBalance']!,
        isError: true,
      );
      return;
    }

    showDialog(
      context: context,
      builder: (context) => AlertDialog(
        title: Text(AppStrings.tr['confirmReservation']!),
        content: Column(
          mainAxisSize: MainAxisSize.min,
          crossAxisAlignment: CrossAxisAlignment.start,
          children: [
            _buildInfoRow(AppStrings.tr['meal']!, meal.name),
            _buildInfoRow(
              AppStrings.tr['date']!,
              Helpers.formatDate(meal.mealDate, 'EEEE, MMM dd'),
            ),
            _buildInfoRow(AppStrings.tr['time']!, meal.mealPeriod),
            _buildInfoRow(
              AppStrings.tr['price']!,
              Helpers.formatCurrency(meal.reservationPrice),
            ),
          ],
        ),
        actions: [
          TextButton(
            onPressed: () => Navigator.pop(context),
            child: Text(AppStrings.tr['cancel']!),
          ),
          ElevatedButton(
            onPressed: () {
              Navigator.pop(context);
              _createReservation(meal);
            },
            child: Text(AppStrings.tr['confirm']!),
          ),
        ],
      ),
    );
  }

  void _addToCart(MealModel meal) {
    final mealProvider = Provider.of<MealProvider>(context, listen: false);
    final cartProvider = Provider.of<CartProvider>(context, listen: false);
    
    // Yemekhane seçimi kontrolü
    if (mealProvider.selectedCafeteriaId == null) {
      Helpers.showSnackBar(
        context,
        'Lütfen önce bir yemekhane seçin',
        isError: true,
      );
      return;
    }
    
    if (cartProvider.isMealInCart(meal.id)) {
      Helpers.showSnackBar(
        context,
        'Bu yemek zaten sepette',
        isError: true,
      );
      return;
    }
    
    cartProvider.addToCart(meal);
    Helpers.showSnackBar(
      context,
      '${meal.name} sepete eklendi',
    );
  }

